<li class="collection-item avatar light-green lighten-5 brown-text">
  <img src= <%= stache.image_url %> alt="" class="circle">
  <span class="title black-text"><%= stache.name %></span>
  <div class="description">
    <p><%= stache.description %></p>
  </div>
  <p class="secondary-content right-align">Stache Price:
    <%= number_to_currency(stache.price) %><br>
    <%= form_for(:stache_in_cart, url: 'update_quantity') do |f| %>

    <div class="cart_data">
      <div class="stache_in_cart">
        <%= f.label :quantity %>:
        <%= f.number_field :quantity, value: @cart.contents[stache.id.to_s] %>
      </div>
        <%= f.hidden_field :stache_id, value: stache.id %>
        <%= f.submit "Update", class: "btn brown" %>
    </div>
    <% end %>
  <a class="delete" data-method='delete' href="/cart_staches/<%= stache.id %>">
    <i class="material-icons red-text">delete</i>
  </a>
  </p>
</li>
<div class="line"></div>
