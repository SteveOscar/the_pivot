<h1 class="center">Staches</h1>

<div class="row center">
  <div class="col s12 cards-container">
    <% @staches.each do |stache| %>
      <div class="card">
        <div class="card-image">
              <img src= <%= stache.image_url %> >
              <span class="card-title black-text"><%= stache.name %></span>
            </div>
        <div class="card-content">
          <p><%= stache.description %></p>
          <p>Price: $<%= stache.price %></p>
        </div>
        <div class="card-action">
          <%= link_to "Add to Cart", cart_staches_path(stache_id: stache.id), method: :post %>
        </div>
      </div>
    <% end %>
  </div>
</div>
