<div class="container">
  <h3>Create a New Account</h3>
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <p><%= pluralize(@user.errors.count, "error") %>
      prohibited this record from being saved:</p>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
    <%= f.label :username %>
    <%= f.text_field :username  %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Create Account", class: "wave-effect waves-light btn light-green darken-4" %>
  <% end  %>
</div>
