<div id="cause-card" class="card row">
  <div class="card-content white darken-1">
    <h3 class="col s12 center-align"> <%= @cause.title %></h3>
    <div class="cause-info-container col s8">
      <div class="cause-img-container valign-wrapper center-align">
        <%= image_tag("http://2.bp.blogspot.com/_h4tLF5wFv0Q/RaGGhc9VF4I/AAAAAAAAAOw/tNXjEPlMx8I/s320/Picture+1.png", class: "valign") %>
      </div>
      <p>
        <%= @cause.description %>
      </p>
    </div> <!-- end of img and description column -->
    <div class="col s4 center">
      <div class="cause-stats-container center row">
        <div class="col s6">
          <p>Supporters:</p>
          <span>1</span>
          <p>Donations:</p>
          <span>1</span>
        </div>
        <div class="col s6">
          <div id="amount-raised">
            <p>Amount Raised:</p>
            <span><%= @amount_raised %></span>
          </div>
          <p>Target Goal:</p>
          <span><%= @cause.goal %></span>
        </div>
      </div>
      <div class="input-field">
        <%= form_for(@donation) do |f| %>

          <%= render "shared/error_messages", object: f.object %>

          <%= f.label :amount %>
          <%= f.text_field :amount %>
          <%= f.hidden_field :user_id, :value => current_user_id %>
          <%= f.hidden_field :cause_id, :value => @cause.id %>
          <%= f.submit "Fund This Dream", class: "wave-effect waves-light btn light-green darken-4" %>
        <% end  %>
        <!-- <input id="donation_amount" type="text">
        <label for="donation_amount">Donation Amount ($)</label>
        <%= link_to "FUND THIS DREAM", "#", class: "btn light-green darken-4" %> -->
      </div> <!-- end of donation form -->
    </div> <!-- end of second cause card column -->
  </div> <!-- end of card content -->
</div> <!-- end of card row -->
