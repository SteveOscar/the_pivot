<%= link_to user_cause_path(causes_managed.user, causes_managed) do %>
  <li class="card cause-managed row">
    <div class="cause-img-container valign-wrapper col s3">
      <%= image_tag(causes_managed.image_url, class: "valign") %>
    </div>
    <div class="col s9 row">
      <h6 class="col s12">
        <%= causes_managed.title %>
      </h6>
      <p class="col s8 left-align">
        <%= causes_managed.description %>
      </p>
      <div class="cause-funds col s4">
        <p>Raised: <span> <%= causes_managed.amount_raised %></span></p>
        <p>Goal: <span><%= causes_managed.goal %></span></p>
      </div>
    </div>
  </li>
<% end %>
