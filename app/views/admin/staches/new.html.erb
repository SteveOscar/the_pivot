<div class="container">
  <%= form_for([:admin, @stache]) do |f| %>

    <%= render "shared/error_messages", object: f.object %>

    <%= f.text_field :name %>
    <%= f.label :name %>

    <%= f.text_field :description %>
    <%= f.label :description %>

    <%= f.number_field :price %>
    <%= f.label :price %>

    <%= f.collection_select :retired, [true, false], ["Active", "Retired"] %>
    <%= f.label :retired "Status" %>

    <%= f.text_field :image_url %>
    <%= f.label :image_url, "Image Url" %>
    <br>
    <br>

    <%= f.collection_check_boxes :categories, Category.all, :id, :title, include_hidden: false do |b| %>
     <div class="categories-checkboxes">
       <%= b.check_box %>
       <%= b.label %>
     </div>
      <% end %>
    <%= f.label :categories %>
    <br>
    <br>
    <%= f.submit "Create New Stache", class: "btn light-green darken-4"%>
  <% end %>
</div>
